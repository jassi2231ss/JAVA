import java.util.*;
class Main{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the string");
        String str=sc.nextLine();
       
        char[] arr=new char[str.length()];     //creating a character array to store all the characters in the array
        int j=0;
        for(int i=str.length()-1; i>=0; i--)
        {
            arr[j]=str.charAt(i);
            j++;
        }
        for(char x:arr)
        
        System.out.print(x);
    }
}




//also we can do the code in another way by add the characters to a string

import java.util.*;
class Main{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the string");
        String str=sc.nextLine();
       
         String str1="";
        
        for(int i=str.length()-1; i>=0; i--)
        {
            str1=str1+str.charAt(i);
            
        }
        
        
        System.out.print(str1);
    }
}
